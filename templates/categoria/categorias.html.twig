{% extends 'base.html.twig' %}

{% block title %}MScode - Categorias{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="mb-4 d-flex flex-row justify-content-between">
            <h1>Categorias</h1>
            <div>
                <a href="{{ path('cadastrar_categoria_show') }}" class="btn btn-primary"><i class="bi bi-plus"></i>Nova categoria</a>
            </div>
        </div>
        
        {% include 'mensagens.html.twig' %}

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col-1 text-align-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                <tr>
                    <th scope="row">{{ categoria.id }}</th>
                    <td>{{ categoria.nome }}</td>
                    <td class="col-1 text-align-right">
                        <a class="btn btn-secondary btn-sm"
                           title="Editar"
                           href="{{ path('editar_categoria_show', {categoria: categoria.id}) }}">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a class="btn btn-danger btn-sm"
                           title="Remover"
                           href="{{ path('remover_categoria', {categoria: categoria.id}) }}">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    {% include 'footer.html.twig' %}
{% endblock %}
