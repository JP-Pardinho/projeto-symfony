<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MsCode - Projeto Symfony!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <body>
            <header>
                <div class="border-bottom mb-2">
                    <div class="container">
                        <div class="d-flex flex-wrap justify-content-center align-items-center py-3">
                            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                                <img class="me-2" src="{{ asset('imagens/logotipo.svg') }}" width="53">
                                <span class="fs-4">MS Code - Estoque</span>
                            </a>

                            <ul class="nav nav-pills d-flex align-items-center">
                                <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Início</a></li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Vendas
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Vendas realizadas</a></li>
                                        <li><a class="dropdown-item" href="#">Nova venda</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Produtos
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('listar_produtos') }}">Estoque</a></li>
                                        <li><a class="dropdown-item" href="{{ path('listar_categorias') }}">Categorias</a></li>
                                    </ul>
                                </li>

                                {% if app.user %}
                                    <li class="nav-item dropdown">
                                        <a id="seta-dropdown" class="nav-link dropdown-toggle d-flex align-items-center text-decoration-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-person-circle fs-3 me-2"></i>
                                            <span class="fs-6">
                                                <small>Olá, {{ app.user.nome }} :D </small> <br>
                                            </span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('editar_usuario_show') }}">Meu perfil</a></li>
                                            <li><a class="dropdown-item " href="{{ path('app_logout') }}">Sair</a></li>
                                        </ul>
                                    </li>
                                {% else %}
                               
                                    <li class="nav-item dropdown">
                                        <a id="seta-dropdown" class="nav-link dropdown-toggle d-flex align-items-center text-decoration-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-person-circle fs-3 me-2"></i>
                                            <span class="fs-6">
                                                <small>Bem-vindo :D</small> <br>
                                                Entre ou Cadastre-se
                                            </span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('app_login') }}">Entrar</a></li>
                                            <li><a class="dropdown-item" href="{{ path('cadastrar_usuario') }}">Cadastrar</a></li>
                                        </ul>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        {% block body %}{% endblock %}

    </body>
</html>
